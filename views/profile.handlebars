            <div class="btn-group">
              <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="#">
                Action 
                <span class="icon-cog icon-white"></span><span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                  <li><a href="#"><span class="icon-wrench"></span> Modify User</a></li>
                  <li><a href="#"><span class="icon-trash"></span> Delete User</a></li>
              </ul>
            </div>
          </div>--}}
        </div>
      </div>
    </div>
    <script>
      $('#car-input').hide();
      $('#update-car').on('click', function(){
        $('#car-input').show();
      })

      $('#new-car').on('click', function(){
        $('#car-input').hide();
        $.ajax({
          method:'PUT',
          url: '/newcar',
          data: $('#car').val().trim()
        }).done(function(){
          console.log('done changing car!')
          $('#carModel').text($('#car').val().trim())
        })
      })
    </script>